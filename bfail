#!/bin/bash

if [ "$1" = "clean" ];
then
    ssh vagrant rm -rf /behat_fail/*
    exit 0
else
    DIR=`ls /mnt/c/Users | grep "cjami"`
    if [ -z $DIR ];
    then
        echo "user desktop not found"
        exit 1
    else
        scp -rp vagrant:/behat_fail/* /mnt/c/Users/$DIR/Desktop
        exit 0
    fi
fi
